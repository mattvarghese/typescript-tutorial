{
  "name": "ts01-helloworld",
  "version": "1.0.0",
  "description": "Hello World HTTP Server using TypeScript and NodeJS, with Visual Studio Code, ESLint, and Unit Testing",
  "main": "src/main.ts",
  "homepage": "https://www.youtube.com/channel/UCs2xrnLFzKFeZMhwn7_CquQ",
  "scripts": {
    "test": "npm run build && jest",
    "build": "npm install && npx --package typescript tsc",
    "start": "npm run build && node build/main.js",
    "clean": "npm install -D typescript && npx --package typescript tsc clean-all.ts && node clean-all.js",
    "lint": "npm run build && eslint . --ext .ts"
  },
  "keywords": [
    "TypeScript",
    "NodeJS",
    "ESLint",
    "Visual Studio Code",
    "VSCode",
    "UnitTests"
  ],
  "author": "Matt Varghese",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
